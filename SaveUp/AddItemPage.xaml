<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaveUp.AddItemPage"
             Title="Add Item">
    <StackLayout>
        <Entry Placeholder="Item Description" Text="{Binding ItemDescription}" />
        <Entry Placeholder="Price" Text="{Binding ItemPrice}" Keyboard="Numeric" />
        <Button Text="Save Item" Command="{Binding SaveItemCommand}" />
    </StackLayout>
</ContentPage>